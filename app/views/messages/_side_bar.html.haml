.side-bar
 .side-bar__user-name
  .side-bar__user-name-box
   .side-bar__user-name-text
    = current_user.name

   .side-bar__user-name-menu
    .side-bar__user-name__edit
     = link_to new_group_path, class: "edit-btn" do
      = icon('far', 'edit')
     = link_to edit_user_path(current_user), class: "setting-btn" do
      = icon('fas', 'cog')

 .side-bar__group-list 
  - current_user.groups.each do |group|
   .group
    = link_to group_messages_path(group), class: "aaa" do
     .group__name
      = group.name
     .group__message
      = group.show_last_message

  .side-bar__group-top techcamp
  .side-bar__group-bottom